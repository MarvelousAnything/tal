{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "configure",
      "detail": "Configures cmake for project.",
      "command": "cmake . -B build -G Ninja",
      "problemMatcher": [],
    },
    {
      "type": "shell",
      "label": "clean",
      "detail": "Removes all built files.",
      "command": "ninja clean",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/build"
      }
    },
    {
      "type": "shell",
      "label": "build",
      "detail": "Builds project.",
      "command": "ninja",
      "problemMatcher": "$gcc",
      "options": {
        "cwd": "${workspaceFolder}/build"
      }
    },
    {
      "type": "shell",
      "label": "flash dev",
      "detail": "Flashes current build to devboard.",
      "command": "openocd -f bin/openocd/devboard.cfg -c 'program build/titan.elf verify reset exit'",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
  ]
}